# ===========================================
# Knowledge Assistant Configuration
# ===========================================

# Application Settings
APP_NAME=Knowledge Assistant
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=sqlite+aiosqlite:///./data/knowledge.db

# Redis (for task queue)
REDIS_URL=redis://localhost:6379

# ===========================================
# LLM Configuration
# ===========================================

# LiteLLM Unified Interface
# Supports: openai, anthropic, ollama, qwen, deepseek, etc.
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LLM_MODEL=llama3.2

# OpenAI (Optional)
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Qwen (Optional)
QWEN_API_KEY=
QWEN_MODEL=qwen-turbo

# DeepSeek (Optional)
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# ===========================================
# Embedding Configuration
# ===========================================

# Embedding Provider: local, openai, ollama
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=BAAI/bge-m3

# For OpenAI Embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# For Ollama Embeddings
OLLAMA_EMBEDDING_MODEL=bge-m3

# ===========================================
# Vector Store Configuration
# ===========================================
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=knowledge_base

# ===========================================
# Document Processing
# ===========================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE_MB=50

# ===========================================
# Authentication (Optional)
# ===========================================
ENABLE_AUTH=false
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Feature Flags
# ===========================================
ENABLE_STREAMING=true
ENABLE_HYBRID_SEARCH=true
ENABLE_AUTO_TAGGING=true
ENABLE_SUMMARIZATION=true
